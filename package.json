{
  "name": "multiplayer-arcade-space-shooter",
  "version": "1.0.0",
  "description": "A multiplayer arcade space shooter built with Phaser.",
  "main": "main.js",
  "scripts": {
    "compile": "tsc",
    "build:client": "webpack --mode production",
    "build:server": "tsc -p server/tsconfig.json",
    "build": "npm run build:client && npm run build:server",
    "start:client": "webpack serve --mode development --open",
    "start:server": "node dist/server/src/GameServer.js"
  },
  "dependencies": {
    "module-alias": "^2.2.3",
    "phaser": "^3.88.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.14.1",
    "@types/ws": "^8.18.1",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.6.3",
    "http-server": "^14.1.1",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
